{
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "extends": "standard-with-typescript",
  "rules": {
    "semi": [2, "always"],
    "@typescript-eslint/semi": [2, "always"],
    "@typescript-eslint/no-extraneous-class": [0]
  }
}
